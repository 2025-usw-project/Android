<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.su.washcall">
    <!-- ✅ 인터넷 및 카메라 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._2gradeproject"
        tools:targetApi="31">
        <activity
            android:name=".MachinListActivity"
            android:exported="false" />
        <activity
            android:name=".RoomListActivity"
            android:exported="false" /> <!-- ✅ 앱 실행 시: 로그인 화면 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ✅ 회원가입 -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" /> <!-- ✅ 온보딩 -->
        <activity
            android:name=".OnboardingSimpleActivity"
            android:exported="false" />
        <activity
            android:name=".OnboardingSimple2Activity"
            android:exported="false" /> <!-- ✅ 일반 사용자용 메인 -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- ✅ 관리자 모드 -->
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:label="관리자 대시보드" /> <!-- ✅ 세탁기 상세 로그 -->
        <!-- <activity -->
        <!-- android:name=".WashingDetailActivity" -->
        <!-- android:exported="false" -->
        <!-- android:label="세탁기 상세 로그" /> -->
        <!-- ✅ 캘리브레이션 -->
        <activity
            android:name=".CalibrationActivity"
            android:exported="false"
            android:label="캘리브레이션" /> <!-- ✅ QR 스캔 관련 Activity -->
        <activity
            android:name=".qr.QRScanActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".qr.StartScanActivity"
            android:exported="true" /> <!-- ✅ Firebase 메시징 서비스 (FCM 토큰 및 푸시 수신용) -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>