<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashboardActivity"
    android:background="#10132E"> <!-- 어두운 배경색 -->

    <!-- 타이틀 텍스트 -->
    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="사용자"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- UI 요소들을 중앙에 배치 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ▼▼▼ [오류 해결] 이 버튼의 ID를 'btnRoomCode'로 정확하게 지정합니다. ▼▼▼ -->
        <Button
            android:id="@+id/btnRoomCode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="세탁실 등록 코드 입력"
            android:textSize="16sp"
            app:backgroundTint="#4A4E69" />
        <!-- ▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲ -->

        <!-- '세탁실 및 세탁기 관리' 버튼 -->
        <Button
            android:id="@+id/btnEnterRoom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="세탁실 및 세탁기 관리"
            android:textSize="16sp"
            app:backgroundTint="#4A4E69" />

        <!-- '건의사항' 버튼 -->
        <Button
            android:id="@+id/btnSuggestions"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="건의사항"
            android:textSize="16sp"
            app:backgroundTint="#4A4E69" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
