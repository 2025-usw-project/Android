<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10132E">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:text="🧺 관리자 모드"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- ▼▼▼ 이 부분을 추가하거나 수정하세요 ▼▼▼ -->

            <!-- 신규 세탁실 등록 버튼 -->
            <Button
                android:id="@+id/btnAddNewRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="➕ 신규 세탁실 등록"
                android:backgroundTint="#03A9F4"
                android:textColor="#FFFFFF"/>

            <!-- 신규 세탁기 등록 버튼 -->
            <Button
                android:id="@+id/btnAddNewMachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="➕ 신규 세탁기 등록"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"/>

            <!-- ▲▲▲ 여기까지가 추가된 부분 ▲▲▲ -->


            <!-- 캘리브레이션 버튼 -->
            <Button
                android:id="@+id/btnCalibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#6750A4"
                android:text="캘리브레이션 시작"
                android:textColor="#FFFFFF" />

            <!-- 로그 조회 버튼 -->
            <Button
                android:id="@+id/btnLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#03DAC5"
                android:text="상세 로그 조회"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>

    <!-- 로딩 오버레이 -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</RelativeLayout>
